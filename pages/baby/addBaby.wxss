.baby_header{
  border: 1px solid #bfbfbf;
  width:100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}

.baby_describe{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:20%;
}
.baby_describe text{
  margin: auto 0;
  margin-left: 60rpx;
  font-size: 0.8rem;
  color: #bfbfbf;
}

.baby_image{
  width:80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.baby_header_image image{
  border:1px solid #bfbfbf;
  border-radius: 5rpx;
  padding:10rpx;
  width:40px;
  height:40px;
}

.right_icon image{
  width:20px;
  height:20px;
}

.baby_contents{
  display: flex;
  flex-direction: row;
  width:100%;
  height: 80rpx;
  border-top:1px solid #bfbfbf;
}

.baby_left_cons{
  display: flex;
  flex-direction: row;
  width:40%;
  margin-left:20rpx;
  margin-top:20rpx;
}

.baby_left_cons image{
  width:40rpx;
  height:40rpx;
}

.baby_left_cons text{
  color:#bfbfbf;
  font-size: 0.8rem;
  width:80%;
  margin-left:20rpx;
}

.baby_right_cons{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top:20rpx;
  width:60%;
  color:#bfbfbf;
  font-size: 0.8rem;
}

.line_lay{
  border-bottom: 1px solid #bfbfbf;
}

.addBtn{
  border: 1px solid ;
  margin-top: 60rpx;
  width:80%;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  line-height: 80rpx;
  letter-spacing: 10rpx;
}

picker{
  width:100%;
}